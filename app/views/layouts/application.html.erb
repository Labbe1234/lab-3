<!DOCTYPE html>
<html>
  <head>
    <title>Y</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        font-family: consolas;
      }
      
      .main {
        display: flex;
      }
      
      .menu {
        position:fixed;
        width:200px;
        height:100%;
        padding: 40px;
        padding-top: 20px;
        padding-right: 80px;
        background: rgb(0, 0, 0);
      }
      
      .menu-content{
        padding-top: 50px;
        position: sticky;
        top: 0;
      }
      
      .menu h1 {
        margin-bottom: 30px;
      }
      
      .menu ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }
      
      .menu li {
        margin-bottom: 20px;
        white-space: nowrap;
      }
      
      .menu a {
        text-decoration: none;
        color: black;
        font-weight: bold;
      }
      
      .content {
        padding: 40px;
        text-align: justify;
      }
      
      .menu button {
        display: none;
      }
      
      @media screen and (max-width: 768px) {
      .menu {
        height: 100%;
        padding: 20px 40px;
        position: fixed;
        top: 0;
        left: 0;
        transform: translateX(-100%);
        transition: 0.5s;
      }
      
      .menu-activo {
        transform: translateX(0%);
      }
      
      .menu button {
        display: block;
        font-size: 20px;
        font-weight: bold;
        position: absolute;
        transform: translateX(193px);
      }
      
      .menu-content{
        position: static;
      }
      .content {
        padding: 20px 40px;
      }
      }

      /* Estilos del pie de página */
        .footer {
        background-color: #333;
        color: #fff;
        padding: 20px 0;
        text-align: center;
        z-index: 2;
        bottom: 0;
        left: 0;
        width: 100%;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .footer-content {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction:column;
      }

      .footer-content p {
        margin-right: 600px
      }

      .social-links {
        display: flex;
        gap: 20px;
      }

      .social-link {
        color: #fff;
        font-size: 24px;
        text-decoration: none;
      }

      /* Estilos de los iconos de redes sociales */
      .social-link i {
        transition: color 0.3s ease;
      }

      .social-link i:hover {
        color: #007bff;
      }

      @media screen and (min-width: 768px) {
      .footer-content {
        flex-direction: row;
      }

      .footer-content p {
        margin-right: 20px;
      }
    }

      .hiden{
        display: none;
      }

      .contenido-principal {
        margin-left: 200px; 
        margin-bottom: 60px;
      }
    </style>


  <body>

    <main class="main">
      <section class="menu" id="menu">
        <button>=</button>
        <nav class="navbar menu-content container-fluid" data-bs-theme="dark">
          <h1 class="text-primary">Y</h1>
          <div>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link text-light" href="/Home">
                  <i class="fa-solid fa-house"></i>Home
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/Contact">
                  <i class="fa-solid fa-phone"></i>Contact
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="https://github.com/Labbe1234/labbe1234.github.io">
                  <i class="fa-brands fa-github"></i>Github
                  </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/About">
                  <i class="fa-solid fa-arrow-right"></i>About
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </section>

      <section class="contenido-principal">
        <%= yield %>
      </section>
    </main>
    
    <footer class="footer" id="footer">
        <div class="container">
            <div class="footer-content">  
              <p class="copyright">© 2024 Copyright. All rights reserved.</p>
              <div class="social-links">
                  <a href="#" class="social-link facebook"><i class="fab fa-facebook-f"></i></a>
                  <a href="#" class="social-link twitter"><i class="fab fa-twitter"></i></a>
                  <a href="#" class="social-link instagram"><i class="fab fa-instagram"></i></a>
              </div>
            </div>
        <div>
    </footer>
  </body>

  <script src="https://kit.fontawesome.com/7fdf55b61b.js" crossorigin="anonymous"></script>
  <script>
    const menu = document.getElementById('menu');

    menu.addEventListener('click', () => {
      menu.classList.toggle('menu-activo');
    });
  </script>
</html>
